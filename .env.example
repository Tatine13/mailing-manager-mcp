# ==========================================
# üìß Mailing Manager MCP - Configuration
# ==========================================

# üîê SECURITY & ACCESS
# --------------------
# Master key to unlock the encrypted database.
# Can be set via MAILING_MANAGER_UNLOCK_CODE (preferred) or MAILING_MANAGER_MASTER_KEY.
MAILING_MANAGER_UNLOCK_CODE=your-secure-password-here

# Logging verbosity: trace | debug | info | warn | error
LOG_LEVEL=info

# üìÇ STORAGE
# ----------
# Path where the SQLite DB and config will be stored (Defaults to ~/.mailing-manager)
# MAILING_MANAGER_DATA_DIR=/custom/path/to/data

# üîÑ EMAIL SYNCHRONIZATION
# ------------------------
# Maximum number of emails to fetch per sync session (Min: 1, Max: 100, Default: 20)
MAILING_MANAGER_SYNC_LIMIT=20

# Automatically sync all active accounts on server load (true | false)
MAILING_MANAGER_AUTO_SYNC_ON_LOAD=false

# üîó WEBHOOKS SERVER (Optional)
# -----------------------------
MAILING_MANAGER_WEBHOOK_ENABLED=true
MAILING_MANAGER_WEBHOOK_PORT=3100
MAILING_MANAGER_WEBHOOK_HOST=localhost

# Security key for signing outbound webhooks and validating inbound ones
# Generate one with: openssl rand -hex 32
WEBHOOK_SECRET_KEY=

# üîë OAUTH2 CREDENTIALS (Optional - for Gmail/Outlook)
# ----------------------------------------------------
# Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3100/oauth/callback/google

# Microsoft Azure Portal: https://portal.azure.com
MS365_CLIENT_ID=
MS365_CLIENT_SECRET=
MS365_REDIRECT_URI=http://localhost:3100/oauth/callback/microsoft

# üß™ ADVANCED / DEBUG
# -------------------
# Enable remote interactive mode (tunnels) even if stdout is a TTY
REMOTE_MODE=false

# Worker concurrency (Max simultaneous account connections)
WORKER_CONCURRENCY=5
